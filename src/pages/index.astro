const cardList = [
    {
        title: "Membership Organisation",
        parrafo:
            "Our membership management software provides full automation of membership renewals and payments ",
        icono: 'tarjeta1'
    },
    {
        title: "National Associationsent",
        parrafo:
            "membership management software provides full automation of membership renewals and paym",
        icono: 'tarjeta2'
    },
    {
        title: "clubs and groups",
        parrafo:
            "Our membership managemet sofware provides full automation of membership renewals and payments",
        icono: 'tarjeta3'
    },
];
---

<Layout>
    <Jumbotron />

    <section>
        <h2>Manage your entire community in a single systen</h2>
        <p>Who is nexcent suitable for?</p>

        <div>
            {
                cardList.map(function (props) {
                    return (
                        <TarjetaSimple
                            title={props.title}
                            parrafo={props.parrafo}
                            icono={props.icono}
                        />
                    );
                })
            }
        </div>
    </section>
</Layout>
